    &lt;span class=&quot;em demo-col--up-hidden demo-col--500-visible demo-col--500-12&quot;&gt;col--500-12&lt;/span&gt;
  &lt;/div&gt;
  &lt;div class=&quot;demo-col demo-col--up-3 demo-col--1000-6&quot;&gt;
    &lt;span class=&quot;increment&quot;&gt;2&lt;/span&gt;&lt;br /&gt;
    &lt;span class=&quot;em demo-col--1000-hidden&quot;&gt;col--up-3&lt;/span&gt;
    &lt;span class=&quot;em demo-col--up-hidden demo-col--500-hidden demo-col--1000-visible&quot;&gt;col--1000-6&lt;/span&gt;
    &lt;span class=&quot;em demo-col--up-hidden demo-col--500-visible demo-col--500-12&quot;&gt;col--500-12&lt;/span&gt;
  &lt;/div&gt;
  &lt;div class=&quot;demo-col demo-col--up-6 demo-col--1000-hidden demo-col--500-visible&quot;&gt;
