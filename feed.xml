      &lt;span class=&quot;em demo-col--up-hidden demo-col--500-hidden demo-col--1000-visible&quot;&gt;col--1000-12&lt;/span&gt;
      &lt;span class=&quot;em demo-col--up-hidden demo-col--500-visible demo-col--500-12&quot;&gt;col--500-12&lt;/span&gt;
  &lt;/div&gt;
